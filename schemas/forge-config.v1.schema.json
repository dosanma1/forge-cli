{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/dosanma1/forge-cli/main/schemas/forge-config.v1.schema.json",
    "title": "Forge Configuration",
    "description": "Configuration file for Forge framework workspaces",
    "type": "object",
    "required": [
        "version",
        "workspace",
        "newProjectRoot",
        "projects"
    ],
    "properties": {
        "$schema": {
            "type": "string",
            "description": "JSON Schema reference"
        },
        "version": {
            "type": "string",
            "description": "Configuration schema version",
            "const": "1"
        },
        "workspace": {
            "type": "object",
            "description": "Workspace-level configuration",
            "required": [
                "name",
                "forgeVersion"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Workspace name (must be kebab-case)",
                    "pattern": "^[a-z][a-z0-9-]*$"
                },
                "forgeVersion": {
                    "type": "string",
                    "description": "Forge framework version (semver)",
                    "pattern": "^\\d+\\.\\d+\\.\\d+$"
                },
                "toolVersions": {
                    "type": "object",
                    "description": "Tool versions used in the workspace",
                    "properties": {
                        "angular": {
                            "type": "string",
                            "description": "Angular CLI version"
                        },
                        "go": {
                            "type": "string",
                            "description": "Go version"
                        },
                        "nestjs": {
                            "type": "string",
                            "description": "NestJS version"
                        },
                        "node": {
                            "type": "string",
                            "description": "Node.js version"
                        },
                        "bazel": {
                            "type": "string",
                            "description": "Bazel version"
                        }
                    }
                },
                "github": {
                    "type": "object",
                    "description": "GitHub organization configuration",
                    "properties": {
                        "org": {
                            "type": "string",
                            "description": "GitHub organization name"
                        }
                    }
                }
            }
        },
        "newProjectRoot": {
            "type": "string",
            "description": "Root directory for new projects",
            "default": "."
        },
        "projects": {
            "type": "object",
            "description": "Projects in the workspace",
            "additionalProperties": {
                "allOf": [
                    {
                        "type": "object",
                        "required": [
                            "projectType",
                            "language",
                            "root"
                        ],
                        "properties": {
                            "projectType": {
                                "type": "string",
                                "description": "Type of project",
                                "enum": [
                                    "application",
                                    "service",
                                    "library"
                                ]
                            },
                            "language": {
                                "type": "string",
                                "description": "Primary language/framework",
                                "enum": [
                                    "go",
                                    "nestjs",
                                    "angular",
                                    "react",
                                    "vue"
                                ]
                            },
                            "root": {
                                "type": "string",
                                "description": "Relative path to project root"
                            },
                            "tags": {
                                "type": "array",
                                "description": "Tags for categorizing projects",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "architect": {
                                "type": "object",
                                "description": "Build and deployment targets",
                                "properties": {
                                    "build": {
                                        "type": "object",
                                        "description": "Build configuration",
                                        "required": [
                                            "builder"
                                        ],
                                        "properties": {
                                            "builder": {
                                                "type": "string",
                                                "description": "Builder to use",
                                                "enum": [
                                                    "@forge/bazel:build",
                                                    "@forge/angular:build"
                                                ]
                                            },
                                            "options": {
                                                "type": "object",
                                                "description": "Builder-specific options"
                                            },
                                            "configurations": {
                                                "type": "object",
                                                "description": "Named build configurations",
                                                "properties": {
                                                    "production": {
                                                        "type": "object",
                                                        "description": "Production configuration"
                                                    },
                                                    "development": {
                                                        "type": "object",
                                                        "description": "Development configuration"
                                                    },
                                                    "local": {
                                                        "type": "object",
                                                        "description": "Local configuration"
                                                    }
                                                },
                                                "additionalProperties": {
                                                    "type": "object"
                                                }
                                            },
                                            "defaultConfiguration": {
                                                "type": "string",
                                                "description": "Default configuration to use"
                                            }
                                        }
                                    },
                                    "serve": {
                                        "type": "object",
                                        "description": "Development server configuration",
                                        "properties": {
                                            "builder": {
                                                "type": "string",
                                                "description": "Server builder to use"
                                            },
                                            "options": {
                                                "type": "object",
                                                "description": "Server options"
                                            },
                                            "configurations": {
                                                "type": "object",
                                                "description": "Named server configurations",
                                                "additionalProperties": {
                                                    "type": "object"
                                                }
                                            }
                                        }
                                    },
                                    "deploy": {
                                        "type": "object",
                                        "description": "Deployment configuration",
                                        "required": [
                                            "deployer"
                                        ],
                                        "properties": {
                                            "deployer": {
                                                "type": "string",
                                                "description": "Deployment target",
                                                "enum": [
                                                    "@forge/helm:deploy",
                                                    "@forge/cloudrun:deploy",
                                                    "@forge/firebase:deploy"
                                                ]
                                            },
                                            "options": {
                                                "type": "object",
                                                "description": "Deployment options"
                                            },
                                            "configurations": {
                                                "type": "object",
                                                "description": "Named deployment configurations",
                                                "additionalProperties": {
                                                    "type": "object"
                                                }
                                            },
                                            "defaultConfiguration": {
                                                "type": "string",
                                                "description": "Default deployment configuration"
                                            }
                                        },
                                        "allOf": [
                                            {
                                                "if": {
                                                    "properties": {
                                                        "deployer": {
                                                            "const": "@forge/helm:deploy"
                                                        }
                                                    }
                                                },
                                                "then": {
                                                    "properties": {
                                                        "options": {
                                                            "required": [
                                                                "namespace"
                                                            ]
                                                        }
                                                    }
                                                }
                                            },
                                            {
                                                "if": {
                                                    "properties": {
                                                        "deployer": {
                                                            "const": "@forge/firebase:deploy"
                                                        }
                                                    }
                                                },
                                                "then": {
                                                    "properties": {
                                                        "options": {
                                                            "required": [
                                                                "projectId"
                                                            ]
                                                        }
                                                    }
                                                }
                                            },
                                            {
                                                "if": {
                                                    "properties": {
                                                        "deployer": {
                                                            "const": "@forge/cloudrun:deploy"
                                                        }
                                                    }
                                                },
                                                "then": {
                                                    "properties": {
                                                        "options": {
                                                            "required": [
                                                                "projectId",
                                                                "region"
                                                            ]
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    },
                                    "test": {
                                        "type": "object",
                                        "description": "Test configuration",
                                        "properties": {
                                            "builder": {
                                                "type": "string",
                                                "description": "Test builder to use"
                                            },
                                            "options": {
                                                "type": "object",
                                                "description": "Test options"
                                            }
                                        }
                                    }
                                }
                            },
                            "metadata": {
                                "type": "object",
                                "description": "Additional project metadata",
                                "additionalProperties": true
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "language": {
                                    "const": "go"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "architect": {
                                    "properties": {
                                        "build": {
                                            "properties": {
                                                "options": {
                                                    "type": "object",
                                                    "properties": {
                                                        "goVersion": {
                                                            "type": "string",
                                                            "description": "Go version (e.g., 1.23.4)"
                                                        },
                                                        "registry": {
                                                            "type": "string",
                                                            "description": "Docker registry URL"
                                                        },
                                                        "dockerfile": {
                                                            "type": "string",
                                                            "description": "Path to Dockerfile",
                                                            "default": "Dockerfile"
                                                        },
                                                        "ldflags": {
                                                            "type": "string",
                                                            "description": "Go linker flags"
                                                        },
                                                        "race": {
                                                            "type": "boolean",
                                                            "description": "Enable race detector"
                                                        },
                                                        "tags": {
                                                            "type": "array",
                                                            "description": "Build tags",
                                                            "items": {
                                                                "type": "string"
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "deploy": {
                                            "properties": {
                                                "options": {
                                                    "type": "object",
                                                    "properties": {
                                                        "configPath": {
                                                            "type": "string",
                                                            "description": "Path to deployment config",
                                                            "default": "deploy/helm"
                                                        },
                                                        "namespace": {
                                                            "type": "string",
                                                            "description": "Kubernetes namespace"
                                                        },
                                                        "port": {
                                                            "type": "integer",
                                                            "description": "Service port"
                                                        },
                                                        "healthPath": {
                                                            "type": "string",
                                                            "description": "Health check endpoint",
                                                            "default": "/health"
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "language": {
                                    "const": "angular"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "architect": {
                                    "properties": {
                                        "build": {
                                            "properties": {
                                                "options": {
                                                    "type": "object",
                                                    "properties": {
                                                        "outputPath": {
                                                            "type": "string",
                                                            "description": "Build output directory"
                                                        },
                                                        "environmentMapper": {
                                                            "type": "object",
                                                            "description": "Map forge environments to Angular configurations",
                                                            "additionalProperties": {
                                                                "type": "string"
                                                            }
                                                        },
                                                        "optimization": {
                                                            "type": "boolean",
                                                            "description": "Enable build optimization"
                                                        },
                                                        "sourceMap": {
                                                            "type": "boolean",
                                                            "description": "Generate source maps"
                                                        },
                                                        "budgets": {
                                                            "type": "array",
                                                            "description": "Size budgets",
                                                            "items": {
                                                                "type": "object",
                                                                "properties": {
                                                                    "type": {
                                                                        "type": "string"
                                                                    },
                                                                    "maximumWarning": {
                                                                        "type": "string"
                                                                    },
                                                                    "maximumError": {
                                                                        "type": "string"
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "serve": {
                                            "properties": {
                                                "options": {
                                                    "type": "object",
                                                    "properties": {
                                                        "port": {
                                                            "type": "integer",
                                                            "description": "Development server port"
                                                        },
                                                        "host": {
                                                            "type": "string",
                                                            "description": "Development server host"
                                                        },
                                                        "ssl": {
                                                            "type": "boolean",
                                                            "description": "Enable HTTPS"
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "deploy": {
                                            "properties": {
                                                "options": {
                                                    "type": "object",
                                                    "properties": {
                                                        "projectId": {
                                                            "type": "string",
                                                            "description": "Firebase project ID"
                                                        },
                                                        "target": {
                                                            "type": "string",
                                                            "description": "Firebase hosting target (optional)"
                                                        },
                                                        "configPath": {
                                                            "type": "string",
                                                            "description": "Path to Firebase config directory"
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "language": {
                                    "const": "nestjs"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "architect": {
                                    "properties": {
                                        "build": {
                                            "properties": {
                                                "options": {
                                                    "type": "object",
                                                    "properties": {
                                                        "nodeVersion": {
                                                            "type": "string",
                                                            "description": "Node.js version"
                                                        },
                                                        "registry": {
                                                            "type": "string",
                                                            "description": "Docker registry URL"
                                                        },
                                                        "dockerfile": {
                                                            "type": "string",
                                                            "description": "Path to Dockerfile",
                                                            "default": "Dockerfile"
                                                        },
                                                        "tsconfig": {
                                                            "type": "string",
                                                            "description": "TypeScript config path"
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "serve": {
                                            "properties": {
                                                "options": {
                                                    "type": "object",
                                                    "properties": {
                                                        "port": {
                                                            "type": "integer",
                                                            "description": "Development server port"
                                                        },
                                                        "watch": {
                                                            "type": "boolean",
                                                            "description": "Enable watch mode"
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                ]
            }
        }
    }
}