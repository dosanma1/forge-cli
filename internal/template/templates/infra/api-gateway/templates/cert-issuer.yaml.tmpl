{{`{{- if and .Values.certManager.enabled .Values.certManager.acme.enabled .Values.apiGateway.tls.enabled -}}
apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: {{ include "api-gateway.fullname" . }}-issuer
spec:
  acme:
    server: {{ .Values.certManager.acme.server }}
    email: {{ .Values.certManager.acme.email }}
    privateKeySecretRef:
      name: {{ include "api-gateway.fullname" . }}-issuer-account-key
    solvers:
    - http01:
        ingress:
          class: {{ .Values.certManager.acme.ingressClass }}
{{- end }}
`}}