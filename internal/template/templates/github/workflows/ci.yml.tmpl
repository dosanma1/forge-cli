name: CI

on:
  push:
    branches: [main, develop]
  pull_request:
    types: [opened, synchronize, reopened, ready_for_review]

jobs:
  validate:
    name: Validate Configuration
    runs-on: ubuntu-latest
    if: github.event_name == 'push' || github.event.pull_request.draft == false

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Forge
        run: |
          curl -sSL https://raw.githubusercontent.com/{{.GitHubOrg}}/forge-cli/main/install.sh | bash
          echo "$HOME/.forge/bin" >> $GITHUB_PATH

      - name: Validate forge.json
        run: forge validate

  test:
    name: Test
    runs-on: ubuntu-latest
    if: github.event_name == 'push' || github.event.pull_request.draft == false
    needs: validate

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Forge
        run: |
          curl -sSL https://raw.githubusercontent.com/{{.GitHubOrg}}/forge-cli/main/install.sh | bash
          echo "$HOME/.forge/bin" >> $GITHUB_PATH

      - name: Setup development environment
        run: forge setup

      - name: Run tests
        run: forge test --ci

  lint:
    name: Lint
    runs-on: ubuntu-latest
    if: github.event_name == 'push' || github.event.pull_request.draft == false
    needs: validate

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Forge
        run: |
          curl -sSL https://raw.githubusercontent.com/{{.GitHubOrg}}/forge-cli/main/install.sh | bash
          echo "$HOME/.forge/bin" >> $GITHUB_PATH

      - name: Setup development environment
        run: forge setup

      - name: Lint code
        run: forge lint

  build-services:
    name: Build Services
    runs-on: ubuntu-latest
    if: github.event_name == 'push' || github.event.pull_request.draft == false
    needs: [test, lint]

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Bazel
        uses: bazel-contrib/setup-bazel@0.8.1
        with:
          bazelisk-cache: true
          repository-cache: true

      - name: Build services
        run: |
          bazel build --config=prod //backend/...

      - name: Cache Bazel outputs
        uses: actions/cache@v4
        with:
          path: |
            ~/.cache/bazel
          key: bazel-services-{{.WorkspaceName}}

  build-frontend:
    name: Build Frontend
    runs-on: ubuntu-latest
    if: github.event_name == 'push' || github.event.pull_request.draft == false
    needs: [test, lint]

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Bazel
        uses: bazel-contrib/setup-bazel@0.8.1
        with:
          bazelisk-cache: true
          repository-cache: true

      - name: Build frontend apps
        run: |
          bazel build --config=prod //frontend/...

      - name: Cache Bazel outputs
        uses: actions/cache@v4
        with:
          path: |
            ~/.cache/bazel
          key: bazel-frontend-{{.WorkspaceName}}

  security:
    name: Security Scan
    runs-on: ubuntu-latest
    if: github.event_name == 'push' || github.event.pull_request.draft == false

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Run Trivy vulnerability scanner
        uses: aquasecurity/trivy-action@master
        with:
          scan-type: "fs"
          scan-ref: "."
          format: "sarif"
          output: "trivy-results.sarif"

      - name: Upload Trivy results to GitHub Security
        uses: github/codeql-action/upload-sarif@v3
        if: always()
        with:
          sarif_file: "trivy-results.sarif"

