apiVersion: skaffold/v4beta11
kind: Config
metadata:
  name: {{.ProjectName}}-microservices

# Root orchestrator skaffold.yaml
# This file coordinates all service deployments via the 'requires' section.
# Each service has its own skaffold.yaml with build/deploy configuration.
# Services are automatically added when generated via 'forge generate service'.

requires:
{{- range .Services}}
  - path: backend/services/{{.Name}}
{{- end}}
{{- if .HasAPIGateway}}
  - path: infra/api-gateway
{{- end}}
