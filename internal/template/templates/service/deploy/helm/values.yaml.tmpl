# {{.ServiceName}} - Base Values
# This file contains common configuration for {{.ServiceName}} across all environments

nameOverride: "{{.ServiceName}}"
fullnameOverride: ""

replicaCount: 1

image:
  repository: {{if .Registry}}{{.Registry}}{{else}}{{ "{{" }} .Values.global.registry {{ "}}" }}{{end}}/{{.ServiceName}}
  pullPolicy: Always
  tag: ""

# Migration image configuration (runs database migrations before deployment)
migrateImage:
  enabled: false
  repository: {{if .Registry}}{{.Registry}}{{else}}{{ "{{" }} .Values.global.registry {{ "}}" }}{{end}}/{{.ServiceName}}-migrate
  pullPolicy: Always
  tag: ""

imagePullSecrets: []

serviceAccount:
  create: true
  annotations: {}
  name: ""

service:
  type: ClusterIP
  ports:
    - name: http
      port: 80
      targetPort: 8080
      protocol: TCP
    - name: grpc
      port: 50051
      targetPort: 50051
      protocol: TCP

ingress:
  enabled: false
  className: "nginx"
  annotations: {}
  hosts:
    - host: {{.ServiceName}}.local
      paths:
        - path: /
          pathType: Prefix
          port: http
  tls: []

resources:
  limits:
    cpu: 500m
    memory: 512Mi
  requests:
    cpu: 100m
    memory: 128Mi

autoscaling:
  enabled: false
  minReplicas: 1
  maxReplicas: 10
  targetCPUUtilizationPercentage: 80
  targetMemoryUtilizationPercentage: 80

livenessProbe:
  httpGet:
    path: /healthz
    port: http
  initialDelaySeconds: 1
  periodSeconds: 10
  timeoutSeconds: 5
  successThreshold: 1
  failureThreshold: 3

readinessProbe:
  httpGet:
    path: /healthz
    port: http
  initialDelaySeconds: 1
  periodSeconds: 5
  timeoutSeconds: 3
  successThreshold: 1
  failureThreshold: 3

# Service-specific configuration
configuration:
  port: "8080"
  grpcPort: "50051"
  logLevel: "info"
  # Add service-specific environment variables here

# Global environment variables
env: []
  # - name: FEATURE_FLAG_X
  #   value: "true"

# Environment variables from ConfigMaps
envFrom: []
  # - configMapRef:
  #     name: app-config

# Environment variables from Secrets
secrets: []
  # - name: DATABASE_URL
  #   valueFrom:
  #     secretKeyRef:
  #       name: postgres-credentials
  #       key: url

podAnnotations: {}

podLabels: {}

podSecurityContext:
  runAsNonRoot: true
  runAsUser: 1000
  fsGroup: 1000

securityContext:
  allowPrivilegeEscalation: false
  capabilities:
    drop:
      - ALL
  readOnlyRootFilesystem: true

# Persistent volumes
volumes: []
  # - name: data
  #   persistentVolumeClaim:
  #     claimName: app-data

volumeMounts: []
  # - name: data
  #   mountPath: /data

nodeSelector: {}

tolerations: []

affinity: {}

# Global configuration (can be overridden per environment)
global:
  registry: ""
  domain: ""
