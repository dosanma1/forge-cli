# {{.ServiceName}} - Development Environment
# Inherits from values.yaml and overrides for dev environment

replicaCount: 1

image:
  tag: "dev-latest"

migrateImage:
  enabled: false
  tag: "dev-latest"

resources:
  limits:
    cpu: 200m
    memory: 256Mi
  requests:
    cpu: 50m
    memory: 64Mi

configuration:
  logLevel: "debug"
  environment: "development"

ingress:
  enabled: true
  className: "nginx"
  annotations:
    cert-manager.io/cluster-issuer: "letsencrypt-staging"
  hosts:
    - host: {{.ServiceName}}-dev.{{if .Domain}}{{.Domain}}{{else}}{{ "{{" }} .Values.global.domain {{ "}}" }}{{end}}
      paths:
        - path: /
          pathType: Prefix
          port: http
  tls:
    - secretName: {{.ServiceName}}-dev-tls
      hosts:
        - {{.ServiceName}}-dev.{{if .Domain}}{{.Domain}}{{else}}{{ "{{" }} .Values.global.domain {{ "}}" }}{{end}}

autoscaling:
  enabled: false

# Development-specific global overrides
global:
  registry: {{if .Registry}}{{.Registry}}{{else}}""{{end}}
  domain: {{if .Domain}}{{.Domain}}{{else}}""{{end}}
