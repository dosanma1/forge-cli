# {{.ServiceName}} - Production Environment
# Inherits from values.yaml and overrides for prod environment

replicaCount: 3

image:
  tag: "prod-latest"

migrateImage:
  enabled: true
  tag: "prod-latest"

resources:
  limits:
    cpu: 1000m
    memory: 1Gi
  requests:
    cpu: 200m
    memory: 256Mi

configuration:
  logLevel: "info"
  environment: "production"

ingress:
  enabled: true
  className: "nginx"
  annotations:
    cert-manager.io/cluster-issuer: "letsencrypt-prod"
  hosts:
    - host: {{.ServiceName}}.{{if .Domain}}{{.Domain}}{{else}}{{ "{{" }} .Values.global.domain {{ "}}" }}{{end}}
      paths:
        - path: /
          pathType: Prefix
          port: http
  tls:
    - secretName: {{.ServiceName}}-prod-tls
      hosts:
        - {{.ServiceName}}.{{if .Domain}}{{.Domain}}{{else}}{{ "{{" }} .Values.global.domain {{ "}}" }}{{end}}

autoscaling:
  enabled: true
  minReplicas: 3
  maxReplicas: 10
  targetCPUUtilizationPercentage: 70
  targetMemoryUtilizationPercentage: 80

# Production-specific global overrides
global:
  registry: {{if .Registry}}{{.Registry}}{{else}}""{{end}}
  domain: {{if .Domain}}{{.Domain}}{{else}}""{{end}}
