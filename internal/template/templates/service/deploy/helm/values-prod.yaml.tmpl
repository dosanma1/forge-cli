# {{.ServiceName}} - Production Environment
# Inherits from values.yaml and overrides for prod environment

replicaCount: 3

image:
  repository: {{.Registry}}/{{.GitHubOrg}}/{{.WorkspaceName}}/{{.ServiceName}}
  tag: "prod-latest"

resources:
  limits:
    cpu: 1000m
    memory: 1Gi
  requests:
    cpu: 200m
    memory: 256Mi

env:
  - name: PORT
    value: "8080"
  - name: LOG_LEVEL
    value: "info"
  - name: ENVIRONMENT
    value: "production"

ingress:
  enabled: true
  className: "nginx"
  annotations:
    cert-manager.io/cluster-issuer: "letsencrypt-prod"
  hosts:
    - host: {{.ServiceName}}.example.com
      paths:
        - path: /
          pathType: Prefix
  tls:
    - secretName: {{.ServiceName}}-prod-tls
      hosts:
        - {{.ServiceName}}.example.com

autoscaling:
  enabled: true
  minReplicas: 3
  maxReplicas: 10
  targetCPUUtilizationPercentage: 70
  targetMemoryUtilizationPercentage: 80
